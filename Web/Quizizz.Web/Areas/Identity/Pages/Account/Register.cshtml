@page
@model Quizizz.Web.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-md-4 offset-md-1">
            <div class="mt-5">
                <div class="mb-4">
                    <h1>Register</h1>
                    <p class="lead">Create an account</p>
                </div>
                <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label for="first-name" asp-for="Input.FirstName"></label>
                        <input type="text" asp-for="Input.FirstName" id="first-name" aria-describedby="emailHelp" class="form-control" placeholder="First Name" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="last-name" asp-for="Input.LastName"></label>
                        <input type="text" asp-for="Input.LastName" id="last-name" aria-describedby="emailHelp" class="form-control" placeholder="last Name" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="email" asp-for="Input.Email"></label>
                        <input type="email" asp-for="Input.Email" id="email" aria-describedby="emailHelp" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        <span id="emailHelp" class="form-text text-info">We'll never share your email with anyone else</span>
                    </div>
                    <div class="form-group">
                        <label for="password" asp-for="Input.Password"></label>
                        <input type="password" asp-for="Input.Password" id="password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="confirm-password" asp-for="Input.ConfirmPassword"></label>
                        <input type="password" asp-for="Input.ConfirmPassword" id="confirm-password" class="form-control" placeholder="Enter Your Password Again" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="mt-3 btn btn-block btn-primary">Register</button>
                </form>
            </div>
        </div>
        <div class="col-12 col-md-6 d-flex">
            <div class="flex-grow-1">
                <partial name="_BubblesAndCirclespartial">
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <partial name="_ValidationScriptsPartial" />
}

@section Login
{
    <li class="nav-item"> 
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
            Login
        </a>
    </li>
}
