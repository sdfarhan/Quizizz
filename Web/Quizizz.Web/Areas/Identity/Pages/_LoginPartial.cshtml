@using Microsoft.AspNetCore.Identity
@using Quizizz.Data.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-light text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a id="register" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register" title="Manage">Register</a>
    </li>
    <li class="nav-item">
        <a id="login" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login" title="Manage">Login</a>
    </li>
}
</ul>
