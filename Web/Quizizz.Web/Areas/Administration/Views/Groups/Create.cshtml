@model CreateGroupInputViewModel
@{ 
    ViewData["Title"] = "Create Group";
}

<div class="col-12 col-md-8 offset-md-1 row">
    <form method="post" class="col-11 ml-4" asp-action="Create" asp-controller="Groups" asp-area="Administration">
        <div class="component">
            <div class="card mb-3 mt-3">
                <div class="card-header text-warning" style="font-size: xx-large">
                    <i class="fas fa-folder-plus"></i>
                </div>
                <div class="card-body">
                    <h4 class="card-title">Create Group</h4>
                    <p class="card-text" style="display: block;">
                        <span class="text-primary mr-1">*</span>
                        You can always edit it later!
                    </p>
                </div>
                <div class="card-footer pb-5">
                    <div class="input-group">
                        <input type="text" asp-for="@Model.Name" class="form-control" placeholder="Enter Group Name"/>
                    </div>
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    <div class="row mx-1 text-white">
                        <button id="addGroup" type="submit" class="btn btn-primary col-md-5 mt-5">Add Group</button>
                        <div class="col-1 mr-4"></div>
                        <a id="cancel"
                           class="col-md-5 mt-5 btn btn-primary"
                           asp-action="Index"
                           asp-controller="home">
                            Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section scripts{ 
    <partial name="_ValidationScriptspartial" />
}
