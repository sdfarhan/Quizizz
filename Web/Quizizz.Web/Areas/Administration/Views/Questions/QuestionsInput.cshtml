@model QuestionInputModel
@{
    ViewData["Title"] = "QuestionsInput";
}

<div class="col-12 col-md-8 offset-md-2 row">
    <form id="form" method="post" class="col-12" asp-action="AddNewQuestion" asp-controller="Questions" asp-area="Administration">
        <div class="component">
            <div class="card mb-3">
                <div class="card-header text-warning" style="font-size: xx-large">
                    <i class="fas fa-folder-plus"></i>
                </div>
                <div class="card-body">
                    <h4 class="card-title">Add New Question</h4>
                    <p class="card-text" style="display: block">
                        <span class="text-primary">*</span>
                        You can always edit it later.
                    </p>
                </div>
                <div class="card-footer pb-5">
                    <div class="input-group">
                        <textarea type="text" asp-for="@Model.Text" class="form-control" placeholder="..."></textarea>
                    </div>
                    <span asp-validation-for="@Model.Text" class="text-danger"></span>
                    <div class="row mx-1 text-white">
                        <button id="submitButton" type="submit" class="btn btn-primary col-md-5 mt-5">Add Question</button>
                        <div class="row mx-1"></div>
                        <a class="btn btn-primary col-md-5 mt-5"
                           asp-action="Display"
                           asp-controller="Quizzes"
                           asp-area="Administration">
                            Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<div class="text-center">
    <a id="viewQuiz"
       class="btn btn-primary col-md-5 mt-2"
       asp-action="Display"
       asp-controller="Quizzes"
       asp-area="Administration">
        View Quiz
    </a>
</div>

@section scripts
{
    <partial name="_ValidationScriptspartial" />
    <script src="~/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
    <script src="~/js/tinyMceSetup.js" asp-append-version="true"></script>
}