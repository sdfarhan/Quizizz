@using Quizizz.Common
@using Quizizz.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<header>
    <nav class="navbar navbar-expand-sm navbar-dark bg-white">
        <div class="container">
            <a class="navbar-brand text-primary ml-4" asp-area="@GlobalConstants.Administration" asp-controller="Home" asp-action="Index">@GlobalConstants.SystemName</a>
            <button class="navbar-toggler collapsed"
                    type="button"
                    data-toggle="collapse"
                    data-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto mx-2">
                    @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                    {
                        <li class="nav-item">
                            <a class="btn btn-outline-primary ml-2"
                               asp-area="@GlobalConstants.Administration"
                               asp-controller="Dashboard"
                               asp-action="Index">
                                <i class="fas fa-chart-bar"></i> Dashboard
                            </a>
                        </li>   
                    }
                    <li class="nav-item">
                        <a class="btn btn-outline-primary ml-2"
                           asp-area="Identity"
                           asp-page="/Account/Manage/Index"
                           title="Manage">
                            <i class="fas fa-address-card"></i> Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <form class="form-inline"
                            asp-area="Identity"
                            asp-page="/Account/Logout"
                            asp-route-returnUrl="@(this.Url.Action("Index", "Home", new { area = string.Empty }))"
                            title="Logout">
                            <button type="submit" class="btn btn-outline-primary ml-2">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
